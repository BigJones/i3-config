out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

# Update interval in seconds
update_interval 1.0

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Shortens units to a single character (kiB->k, GiB->G, etc.). Default is off.
short_units yes

# How strict should if_up be when testing an interface for being up?
# The value is one of up, link or address, to check for the interface
# being solely up, being up and having link or being up, having link
# and an assigned IP address. 
if_up_strictness address

# Add spaces to keep things from moving about?  This only affects certain objects.
# use_spacer should have an argument of left, right, or none
use_spacer left

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes
times_in_seconds true

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

#use_xft yes
#xftfont Helvetica:size=15
##BCF5A9
# Stuff after 'TEXT' will be formatted on screen
# 
#    {"name": "cpu","color": "\#5bb789", "full_text": \
#               "\uf0e4[ ${cpu cpu1}% ${cpu cpu2}% ${cpu cpu3}% ${cpu cpu4}% ]"},  \


TEXT

# JSON for i3bar
 [
    {"name": "wifi", "color": "\#5bb789", "full_text": \
        "\uf1eb  ${wireless_essid wlp2s0}" },


    {"name": "battery", "color": "\#6BBE94", "full_text": "\
${if_match "$battery_short" == "C $battery_percent%" }\uf0e7 ${endif}\
${if_match $battery_percent > 85} \uf240 ${else}\
${if_match $battery_percent > 50} \uf241 ${else}\
${if_match $battery_percent > 30} \uf242 ${else}\
${if_match $battery_percent > 10} \uf243 ${else}\
\uf244 ${endif} ${endif} ${endif} ${endif}\
${battery_percent}% ${format_time $battery_time "\hh \mm}"},


	{"name": "memory",  "full_text":\
	    "\uf16c ${memperc}%" , "color" : ${if_match ${memperc}<90}"\#79C49E"${else}"
	    \#ff0000"${endif} },

 	{"name": "disk", "color": "\#79C49E", "full_text" : "\uf0a0 ${fs_free /home}"  },

	{ "name": "date", "color": "\#6BBE94", "full_text": "[${time %A %d.%d.%y}] [${time %H:%M:%S}] \uf109 "},

    {"name": "sound", "color": "\#AEC9BB", "full_text": \
        "\uf028 ${exec amixer get Master -M | grep -oE -m1 "[[:digit:]]*%"}"}

 ],
